
# enable bash completion in interactive shells
if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

# BROKEN:

# adapted from /etc/bash_completion.d/perl
_pv_perlmodules() {
    local cur
    COMPREPLY=()
    cur=$(_get_cword)

    _perlmodules
}

for p_cmd in pv pmpath pmdesc pmvers pmcat; do
    echo complete -F _pv_perlmodules $p_cmd
done

